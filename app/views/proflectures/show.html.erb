<div class="container"> 
    <div class="img-container col s6">
        <%= image_tag @proffessor.proffessorImg %>
    </div>
    <div class="container">
        <h3><%= @proffessor.proffessorName %></h3>
        <%= @lecture.lectureName %>
    </div>
</div>
<table>
    <thead>
        <tr>
            <th data-field="writer">글쓴이</th>
            <th data-field="postTitle">제목</th>
            <th data-field="time">작성일</th>
        </tr>
    </thead>
    <tbody>
        <% @posts.each do |p| %>
        <tr>
            <td><%= User.find_by_id(p.user_id).name %></td>
            <td><%= link_to p.title, {:controller =>"posts", :action =>"show", :post => p.id} %></td>
            <td><%= p.created_at.strftime("%m %d %H %M") %></td>
        </tr>
        <% end %>
    </tbody>
</table>

<div class="digg_pagination">
    <%= will_paginate @posts,
        previous_label: '＜이전 페이지', next_label: '다음 페이지＞' %>
</div>

<%= form_tag('new', method: :get) do %>
    <%= text_field_tag :proflectureId, @proflecture.ids, type: :hidden %>
    <%= submit_tag "글쓰기" %>
<% end %>