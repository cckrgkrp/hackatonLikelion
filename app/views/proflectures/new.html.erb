
<main class="content">
	<div class="content-header ui-content-header">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-lg-push-1 col-sm-10 col-sm-push-1">
					<h1 class="content-heading"><%= Proffessor.find_by_id(@proflecture.proffessor_id).proffessorName %> - <%= Lecture.find_by_id(@proflecture.lecture_id).lectureName %> 강의 평가하기</h1>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<section class="content-inner margin-top-no">
            <br>
            <br>
            <br>
            <h2 class="content-sub-heading"><%= Proffessor.find_by_id(@proflecture.proffessor_id).proffessorName %> - <%= Lecture.find_by_id(@proflecture.lecture_id).lectureName %> 강의 평가하기</h2>
            <div class="card">
                <div class="card-main">
                    <div class="card-inner">
                        <%= form_tag(action: :create) do %>
                            <div class="form-group form-group-label">
                                <%= label :post, :title,{:class =>"floating-label", :for=>"ui_floating_label_example_textarea_autosize"}%>
                                <%= text_field :post, :title,{:class=>"form-control textarea-autosize",:id=>"ui_floating_label_example_textarea_autosize"} %>
                            </div>
                            <div class="form-group form-group-label">    
                                <%= label :post, :body,{:class =>"floating-label", :for=>"ui_floating_label_example_textarea_normal"} %>
                                <textarea class="form-control" id="ui_floating_label_example_textarea_normal" rows="10" type="text" name="post[body]"></textarea>
                            </div>
                                <%= text_field :post, :proflecture_id, :value => @proflecture.id ,type: :hidden %>
                                <%= text_field :post, :user_id, :value => current_user.id, type: :hidden %>
                            <div class="actions">
                                <%= submit_tag "글쓰기" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
