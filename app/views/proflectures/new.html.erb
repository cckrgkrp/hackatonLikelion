<main class="content">
	<div class="content-header ui-content-header">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-lg-push-1 col-sm-10 col-sm-push-1">
					<h1 class="content-heading"><%= @proffessor.proffessorName %> 교수님 강의 생성하기</h1>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<section class="content-inner margin-top-no">
            <br>
            <br>
            <br>
            <h2 class="content-sub-heading"><%= @proffessor.proffessorName %> 교수님 강의 생성하기</h2>
            <div class="card">
                <div class="card-main">
                    <div class="card-inner">
                        <%= form_tag(action: :create) do %>
                            <div class="form-group form-group-label">
                                <%= collection_select(:proflecture, :lecture_id, Lecture.all, :id, :lectureName, prompt: true) %>    
                            </div>
                                <%= text_field :proflecture, :proffessor_id, :value => @proffessor.id, type: :hidden %> 
                                <%= text_field :proflecture, :department_id, :value => @department.id ,type: :hidden %>
                            <div class="actions">
                                <%= submit_tag "글쓰기" %>
                            </div>
                        <% end %>
                    </div>
                </div>
            </div>
        </section>
    </div>
</main>
