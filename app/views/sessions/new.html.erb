<main class="content">
	<div class="content-header ui-content-header">
		<div class="container">
			<div class="row">
				<div class="col-lg-10 col-lg-push-1 col-sm-10 col-sm-push-1">
					<h1 class="content-heading">로그인</h1>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="row">
			<div class="col-lg-4 col-lg-push-4 col-sm-6 col-sm-push-3">
				<section class="content-inner">
					<div class="card">
						<div class="card-main">
							<div class="card-header">
								<div class="card-inner">
									<h1 class="card-heading">Login</h1>
								</div>
							</div>
                            <%= form_for(:session, url: login_path) do |f| %>
                               <div class="form-group form-group-label">
									<div class="row">
										<div class="col-md-10 col-md-push-1">
											<label class="floating-label" for="ui_login_username">닉네임</label>
											<input class="form-control" name="session[name]" id="ui_login_username" type="text">
										</div>
									</div>
								</div>
                                <div class="form-group form-group-label">
									<div class="row">
										<div class="col-md-10 col-md-push-1">
											<label class="floating-label" for="ui_login_password">패스워드</label>
											<input class="form-control" name="session[password]" id="ui_login_password" type="password">
										</div>
									</div>
								</div>
                                <div class="form-group">
									<div class="row">
										<div class="col-md-10 col-md-push-1">
											<button class="btn btn-block btn-brand waves-attach waves-light"> 로그인 하기</button>
                                        </div>
									</div>
								</div>
                                <%= link_to "가입하기", '/users/new', class: "btn waves-effect waves-light" %>
                            <% end %>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</main>
